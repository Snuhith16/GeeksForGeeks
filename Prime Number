class Solution {
  public:
    bool isPrime(int n) {
        // code here
        bool count=0;
        for(int i=2; i*i<=n; ++i ){
            if(n%i==0){
                count++;
            }
        }
        if(count){
            return 0;
        }
            else{
                return 1;
            }
    }
};
